#!/usr/bin/env bash
# Part of Bob: an AI-driven learning and productivity portal for individuals and organizations | Copyright (c) 2025 | License: MIT
# Script to run the Bob module from the virtual environment sandbox using uv

# Get the directory of this script
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PROJECT_ROOT="$SCRIPT_DIR/.."

# Activate the virtual environment if needed
if [ -f "$PROJECT_ROOT/.venv/bin/activate" ]; then
    source "$PROJECT_ROOT/.venv/bin/activate"
fi

# Change to the project root directory
cd "$PROJECT_ROOT"

# Run the dictaite module with uv
uv run -m bob "$@"
